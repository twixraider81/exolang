header {
	#include "exo/exo.h"
}

start = EXO;

/* for reference http://quex.sourceforge.net/doc/html/usage/patterns/context-free.html */

mode EXO:
<skip:       [ \r\n\t]>		/* skip whitespace */
<skip_range: "/*" "*/">		/* skip multiline comments */
<skip_range: "//" "\n">		/* skip singleline comments */
<skip_range: "#" "\n">		/* skip singleline comments */
{
	"int"				=> QUEX_TKN_TYPE_INT;
	[0-9]+				=> QUEX_TKN_INT(Lexeme);
	([0-9]+[.,][0-9]*)	=> QUEX_TKN_FLOAT(Lexeme);
	"+"					=> QUEX_TKN_ADD;
	"-"					=> QUEX_TKN_SUB;
	"*"					=> QUEX_TKN_MUL;
	"/"					=> QUEX_TKN_DIV;
	"="					=> QUEX_TKN_ASSIGN;
	";"					=> QUEX_TKN_SEMICOLON;
	"$"([_a-zA-Z]+)		=> QUEX_TKN_LABEL(Lexeme);
	"("					=> QUEX_TKN_ABRACKET_OPEN;
	")"					=> QUEX_TKN_ABRACKET_CLOSE;

	<<EOF>>				=> QUEX_TKN_TERMINATION;

	<<FAIL>> {
DEBUGMSG( "Unknown token: " << Lexeme );
		return;
	}
}