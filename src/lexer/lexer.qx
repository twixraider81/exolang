header {
	#include <cstdlib>
	#include "error/error.h"
}

start = EXO;

token {
	FLOAT;
	INT;
	SEMICOLON;
	BRACKET_OPEN;
	BRACKET_CLOSE;
}

define {
	FLOAT		([0-9]*"."[0-9]+)|([0-9]+"."[0-9]*)
	INT			[0-9]+
	HEX			"0x"[0-9a-fA-F]+
	BINARY		"0b"[01]+
}

mode EXO:
<skip:       [ \r\n\t]>		/* skip whitespace */
<skip_range: "/*" "*/">		/* skip multiline comments */
<skip_range: "//" "\n">		/* skip singleline comments */
<skip_range: "#" "\n">		/* skip singleline comments */
{
	FLOAT		=> QUEX_TKN_FLOAT(Lexeme);
	INT			=> QUEX_TKN_INT(Lexeme);
	";"			=> QUEX_TKN_SEMICOLON;
	"{"			=> QUEX_TKN_BRACKET_OPEN;
	"}"			=> QUEX_TKN_BRACKET_CLOSE;

	<<EOF>>		=> QUEX_TKN_TERMINATION;

	<<FAIL>> {
DEBUGMSG( "Unknown token: " << Lexeme );
		return;
	}
}